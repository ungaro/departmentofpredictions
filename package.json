{
  "name": "aijudge-ecosystem",
  "version": "1.0.0",
  "description": "AIJudgeMarket + CircleX402 Skill - USDC Hackathon 2026",
  "private": true,
  "workspaces": [
    "contracts",
    "skills/*"
  ],
  "scripts": {
    "install:contracts": "cd contracts && forge install",
    "build:contracts": "cd contracts && forge build",
    "test:contracts": "cd contracts && forge test",
    "deploy:predict": "cd contracts && forge script script/DeployCreateX.s.sol:PredictCreate3Address --rpc-url https://sepolia.base.org",
    "deploy:base": "cd contracts && forge script script/DeployCreateX.s.sol:DeployCreate3 --rpc-url https://sepolia.base.org --broadcast --verify -vvvv",
    "deploy:eth-sepolia": "cd contracts && forge script script/DeployCreateX.s.sol:DeployCreate3 --rpc-url https://gateway.tenderly.co/public/sepolia --broadcast --verify -vvvv",
    "deploy:arc": "cd contracts && forge script script/DeployCreateX.s.sol:DeployCreate3 --rpc-url https://rpc.testnet.arc.network --broadcast -vvvv",
    "deploy:all": "pnpm run deploy:base && pnpm run deploy:eth-sepolia && pnpm run deploy:arc",
    "upgrade:eth-sepolia": "cd contracts && PROXY_ADDRESS=0xF7b9e8C9675d0Dbdb280A117fDf5E39fc6fb9E04 forge script script/DeployCreateX.s.sol:UpgradeCreate3 --rpc-url https://gateway.tenderly.co/public/sepolia --broadcast -vvvv",
    "upgrade:arc": "cd contracts && PROXY_ADDRESS=0xF7b9e8C9675d0Dbdb280A117fDf5E39fc6fb9E04 forge script script/DeployCreateX.s.sol:UpgradeCreate3 --rpc-url https://rpc.testnet.arc.network --broadcast -vvvv",
    "upgrade:all": "pnpm run upgrade:eth-sepolia && pnpm run upgrade:arc",
    "skills:aijudge": "cd skills/aijudge-market && python3",
    "skills:x402": "cd skills/circlex402-skill && python3 main.py",
    "format": "forge fmt && prettier --write '**/*.md'",
    "lint": "forge fmt --check",
    "clean": "rm -rf contracts/out contracts/cache contracts/broadcast"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "prediction-markets",
    "oracle",
    "usdc",
    "cctp",
    "ai",
    "hackathon"
  ],
  "author": "Simon The Sorcerer (@ungaro)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ungaro/aijudge-ecosystem"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}